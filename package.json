{
  "name": "group-9_compiler",
  "version": "1.0.0",
  "description": "Text editor and compiler for my school project",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . Dees_Text_Editor --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Dee's Text Editor\"",
    "package-linux": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/icon.png --prune=true --out=release-builds"
  },
  "author": "Pedro Ogheneochuko",
  "license": "MIT",
  "dependencies": {
    "electron": "^3.0.7",
    "electron-packager": "^15.2.0"
  }
}
